( function() {
	var purl             = location.href;
	var url              = '//ads.pubmatic.com/AdServer/js/pwt/156021/7083';
	var profileVersionId = '';
	if ( purl.indexOf( 'pwtv=' ) > 0 ) {
		var regexp  = /pwtv=(.*?)(&|$)/g;
