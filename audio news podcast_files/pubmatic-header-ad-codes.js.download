var PWT       = {};
var googletag = googletag || {};
googletag.cmd = googletag.cmd || [];
var gptRan    = false;
PWT.jsLoaded  = function() {
	loadGpt();
};

if ( '1' === ad_code_params.enable_amz_ads_bids ) {
	apstag.init({
		pubID: 'ea69f535-72ee-47bc-ad42-cec60377d1ec',
